              $('#ride').attr("src",'img/gameover.jpg');
               $("#gmap").addClass('hidden');
               $("#animation").removeClass('hidden');
               $("#tmbtn button").prop("disabled",true);
               $("#traveltime").text('');
               $("#cost").text('');
               setTimeout(leave, 2000);
              }
